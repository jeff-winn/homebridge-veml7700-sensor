{
  "name": "homebridge-veml7700-sensor",
  "displayName": "Homebridge VEML7700 Sensor",
  "description": "An accessory plugin for the Adafruit VEML7700 lux sensor.",
  "license": "MIT",
  "homepage": "https://github.com/jeff-winn/homebridge-veml7700-sensor",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./build",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test": "jest --ci",
    "release": "tsc --project tsconfig.release.json && jest -c jest.release.config.ts"
  },
  "jestSonar": {
    "reportPath": "build",
    "reportFile": "test-report.xml"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "config.schema.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jeff-winn/homebridge-veml7700-sensor.git"
  },
  "bugs": {
    "url": "https://github.com/jeff-winn/homebridge-veml7700-sensor/issues"
  },
  "engines": {
    "node": ">=14",
    "homebridge": ">=1.3.0"
  },
  "keywords": [
    "homebridge-plugin",
    "veml7700"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.12.0",
    "homebridge": "^1.3.1",
    "moq.ts": "^9.0.2",
    "jest": "^27.0.6",
    "jest-sonar-reporter": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
